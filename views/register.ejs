<%- include('partials/header') %>

<div class="container">
    <div class="form__header">
        <h3>Sign Up</h3>
        <p>Authenticate Yourself !!! </p>
    </div>
    
    <form class="form__main" action="/register" method="post">
        <input class="form-control" type="email" name="email" id="email" placeholder="Valid Email" required>
        <input class="form-control" type="text" name="username" id="name" placeholder="Your Name" required>
        <input class="form-control" type="password" name="password" id="pass" placeholder="Password" required>
        <button type="submit">Register</button>
    </form>
</div>


<%- include('partials/footer') %>